{
  "name": "@repo/data-ops",
  "version": "1.0.0",
  "description": "Helper methods to interface with data",
  "type": "module",
  "scripts": {
    "pull": "drizzle-kit pull --config drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "better-auth-generate": "npx @better-auth/cli generate --config auth-gen/auth.ts",
    "check": "tsc --project tsconfig.json",
    "fix": "prettier --write ."
  },
  "exports": {
    "./database": {
      "import": "./src/db/database.ts"
    },
    "./queries/*": {
      "import": "./src/queries/*.ts"
    },
    "./zod-schema/*": {
      "import": "./src/zod/*.ts"
    },
    "./durable-objects-helpers": {
      "import": "./src/durable-objects-helpers/index.ts"
    },
    "./auth": {
      "import": "./src/better-auth/auth.ts"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@better-auth/stripe": "1.3.34",
    "better-auth": "1.3.34",
    "drizzle-orm": "^0.44.7",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "nanoid": "^5.1.6",
    "stripe": "^19.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "^24.9.2",
    "drizzle-kit": "^0.31.6",
    "tsc-alias": "^1.8.16",
    "wrangler": "^4.45.2"
  }
}
