{
  "name": "@repo/data-ops",
  "version": "1.0.0",
  "description": "Helper methods to interface with data",
  "type": "module",
  "scripts": {
    "pull": "drizzle-kit pull --config drizzle.config.ts",
    "migrate": "echo 'this does nothing as we rely on wrangler d1 migrations'",
    "generate": "drizzle-kit generate --config drizzle.config.ts",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "better-auth-generate": "pnpx @better-auth/cli generate --config auth-gen/auth.ts --output=src/drizzle-out/auth-schema.ts",
    "check": "tsc --project tsconfig.json",
    "fix": "prettier --write ."
  },
  "exports": {
    "./database": "./src/db/database.ts",
    "./queries/*": "./src/queries/*.ts",
    "./zod-schema/*": "./src/zod/*.ts",
    "./durable-objects-helpers": "./src/durable-objects-helpers/index.ts",
    "./auth": "./src/auth.ts",
    "./package.json": "./package.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@better-auth/stripe": "1.3.34",
    "better-auth": "1.3.34",
    "drizzle-orm": "^0.44.7",
    "kysely": "^0.28.8",
    "kysely-d1": "^0.4.0",
    "nanoid": "^5.1.6",
    "stripe": "^19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "drizzle-kit": "^0.31.6",
    "tsc-alias": "^1.8.16",
    "wrangler": "^4.45.2"
  }
}
