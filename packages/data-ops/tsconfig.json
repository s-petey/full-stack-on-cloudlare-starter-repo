{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*", "drizzle.config.ts", "auth-gen/**/*.ts"]
}
